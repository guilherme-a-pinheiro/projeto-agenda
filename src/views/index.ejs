<%- include('includes/head')  %>
<%- include('includes/nav')  %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Agenda</h1>
      <p class="text-center lead">Seus contatos estão abaixo</p>

      <%- include('includes/messages') %>

      <% if(contatos.length > 0) {%>
      <div class="responsive-table">
        <table class="table my-3">
          <tr>
            <% if(contatos.length > 0) { %>
            <td style="background-color: #343a40; color: #fff;">Nome</td>
            <td style="background-color: #343a40; color: #fff;">Sobrenome</td>
            <td style="background-color: #343a40; color: #fff;">Telefone</td>
            <td style="background-color: #343a40; color: #fff;">E-mail</td>
            <td style="background-color: #343a40; color: #fff;">Edições</td>
            <td style="background-color: #343a40; color: #fff;">Exclusões</td>
            <% } %>
          </tr>
          <% contatos.forEach(contato => { %>
          <tr>
            <td><%= contato.nome %></td>
            <td><%= contato.sobrenome %></td>
            <td><%= contato.telefone %></td>
            <td><%= contato.email%></td>
            <td><a href="/contato/index/<%= contato._id %>">Editar</a></td>
            <td><a class="text-danger" href="/contato/delete/<%= contato._id %>">Excluir</ac></td>
          </tr>
          <% }) %>
        </table>
      </div>
      <% } else { %>
        <p class="text-center lead">Não existem contatos na sua agenda</p>
      <% } %>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>